{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "rootDir": ".",  // Update rootDir to include everything
    "outDir": "./dist",
    "baseUrl": "./",  // Keep baseUrl as current folder
    "paths": {
      "@shared/*": ["shared/*"]  // Adjust path to point to shared directory
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*",
    "shared/**/*"  // Make sure shared is included in the build
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
